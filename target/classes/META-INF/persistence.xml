<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="iciiPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mycompany.gestionasistencia.modelo.Cargos</class>
    <class>com.mycompany.gestionasistencia.modelo.Contratos</class>
    <class>com.mycompany.gestionasistencia.modelo.Departamentos</class>
    <class>com.mycompany.gestionasistencia.modelo.DiasDeTrabajo</class>
    <class>com.mycompany.gestionasistencia.modelo.Gerencias</class>
    <class>com.mycompany.gestionasistencia.modelo.JornadaDias</class>
    <class>com.mycompany.gestionasistencia.modelo.JornadasDeTrabajo</class>
    <class>com.mycompany.gestionasistencia.modelo.RegistroAsistencias</class>
    <class>com.mycompany.gestionasistencia.modelo.Roles</class>
    <class>com.mycompany.gestionasistencia.modelo.Usuarios</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/icii_control_asistencia?serverTimezone=America/Santiago"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
